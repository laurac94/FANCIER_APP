  <h2>You might also like...</h2>
  <div class="clothes-seller">
    <% @article.user.articles.each do |article| %>
      <% unless article == @article %>
        <%= cl_image_tag article.photo.key, class: "seller-article" %>

      <% end %>
    <% end %>
  </div>

<div class=" info">
   <%= link_to edit_article_path do %>
    <i class="far fa-edit edit"></i>
    <% end %>
  <div>
    <div class="d-flex justify-content-start" style="margin: 10px">
      <% if user_signed_in? %>
        <%= link_to user_path(@article.user) do %>
          <%= image_tag "profilephoto.png", class: "avatar" %>
        <% end %>
      <% end %>
    <div class="profile-tag">
      <p><strong> <%= @article.user.name %> </strong></p>
      <p>madrid, spain</p>
      <p>
        <% @article.user.rating.times do %>
         ‚≠ê
        <% end %>
      </p>
    </div>
    </div>
    <div class= "d-flex justify-content-between">
    <div>
    <h5 style= "font-weight: bold"> <%= @article.name %>
      <%= @article.category.name %></h5>
    </div>
    <p style= "font-weight: bold"> $<%= @article.price_cents %> </p>
  </div>
  <p>SIZE: <%= @article.size %> </p>
  <p> <%= @article.description.truncate_words(15)%> </p>
    <button type="button" class="btn coral-button btn-lg" data-toggle="modal" data-target="#myModal2">
      add to cart
    </button>
  </div>
  <!-- Modal -->
  <div class="modal right fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2">
    <div class="modal-dialog" role="document">
      <div class="modal-content">

        <div class="modal-header">
           <h4 class="modal-title" id="myModalLabel2">BAG</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>

        <div class="modal-body">
        <div class="d-flex">
        <%= cl_image_tag @article.photo.key, style:"width: 30%;" %>

        <div class= "side-info">
        <h5 style= "font-weight: bold"><%= @article.name %>
        <%= @article.category.name %></h5>
        <p>SIZE: <%= @article.size %></p>
        <p><%= @article.price_cents %></p>
        </div>
        </div>

        <hr>
        <div class="d-flex justify-content-between">
          <p>SUBTOTAL</p>
          <p>$<%= @article.price_cents %></p>
        </div>

        <%= simple_form_for @order do |f|%>
          <%= f.input :name %>
          <%= f.input :street_address %>
          <%= f.input :apartment_number %>
          <%= f.input :city %>
          <%= f.input :state_address %>
          <%= f.input :postal_code %>
          <%= f.country_select :country, {include_blank: 'Select a country'}, {class: 'form-control'}%>
          <%= f.input :article_id, :as => :hidden, :input_html => { :value => @article.id } %>
          <%= f.submit 'checkout', class: 'btn coral-button btn-lg' %>
        <% end %>

        </div>

      </div><!-- modal-content -->
    </div><!-- modal-dialog -->
  </div><!-- modal -->


</div><!-- container -->


