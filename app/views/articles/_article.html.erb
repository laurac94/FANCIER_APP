<div class="article-container">
  <% if article.photos.first.nil?  %>
    <div class="article-card" style="background-image:url(<%= image_path 'default-article.png' %>);">
    </div>
  <% else  %>
    <div class="article-card" style="background-image:url(<%= cl_image_path article.photos.first.key %>);">
    </div>
  <% end %>

  <div class="article-card-infos">
    <h3><%= article.name%></h3>
    <h4>$<%= article.price%></h4>
  </div>.
  <div id="action-<%= "article-#{article.id}" %>">
    <% if Favorite.where(user: current_user, article: article).size != 0 %>
    <%= link_to article_toggle_favorite_path(article), method: :post,  remote: true, class: 'article-star', id: "article-#{article.id}" do %>
      <i class="fas fa-star"></i>
    <% end %>
  <% elsif policy(Favorite).create? %>
    <%= link_to article_toggle_favorite_path(article), method: :post,  remote: true, id: "article-#{article.id}", class: 'article-star' do %>
      <i class="far fa-star"></i>
    <% end %>
  <% end %>
  </div>
  <%= link_to '', article_path(article), class: 'article-card-link' %>
</div>
