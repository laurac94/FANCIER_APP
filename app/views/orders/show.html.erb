<div class="container" style= "text-align: center">
  <div class="row py-4">

    <div class="col-md-3">
      <% if @order.article.photos.first.nil?  %>
        <%= image_tag 'default-article.png', style:"width: 100%;" %>
      <% else  %>
       <%= cl_image_tag @order.article.photos.first.key, style:"width: 100%;" %>
      <% end %>
    </div>
    <div class="col">
      <h1>Congrats! Order on the way. <small><span class="badge badge-primary" style= "background-color: #C97F6A;">CONFIRMED</span></small></h1>
      <ul class="list-unstyled">
        <li><strong>Issued On</strong> <%= @order.created_at.to_date %></li>
        <li><strong>Clothing Item</strong> <%= @order.article.name %></li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>
