<div class="background-profile">

</div>
<div class="backround-user">

  <div class="profile-info">
    <%= image_tag "profilephoto.png", class: "", alt: "alttext" %>
    <div class="add-margin">
      <h2>Order Dashboard</h2>
    </div>
  </div>
  <div class="dashboard-links">
    <div class="clothes">
      <a href="/dashboard">my purchases</a>
    </div>
    <div class="likes">
      <a href="/listings">my listings</a>
    </div>
  </div>
</div>


<div class="order-container">

  <div class="order-section">
    <div class="orders">
      <% current_user.orders.each do |order| %>
        <div class="d-flex border-order">
          <div class="order-photo" style="background-image: url(<%= image_path ('article4.jpg') %>);"></div>
          <div class="order-info">


            <h2><%= order.article.name.capitalize %></h2>

            <h3>SIZE:<%= order.article.size %></h3>
            <h4>$<%= order.article.price_cents%>.00</h4>
            <p><%= order.state%></p>

            <% if order.state == 'shipped' %>
              <%= link_to " Mark as received", buyers_order_path(order), method: :patch, class: 'mainbutton' %>
            <% elsif order.state == "delivered" && order.review.nil? %>
              <%= link_to "Write a review", new_order_review_path(order) %>
            <% end %>
          </div>
        </div>
        <div class="total-section justify-content-between">
          <div class="subtotal">SUBTOTAL</div>
          <div class="price">$<%= order.article.price_cents%>.00</div>
        </div>
      <% end %>
    </div>
  </div>
</div>


