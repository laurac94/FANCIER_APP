<div class="background-profile">
  <h1>+</h1>
</div>
<div class="backround-user">

  <div class="profile-info">
    <%= image_tag "profilephoto.png", class: "", alt: "alttext" %>
    <h2><%=  current_user.name%></h2>
    <p>london, england</p>
  </div>
  <div class="profile-links">
    <div class="clothes">
      <a href="/dashboard">my orders</a>
    </div>
    <div class="likes">
      <a href="/listings">listings</a>
    </div>
  </div>
</div>

<div class="order-container">

  <div class="order-section">
    <div class="orders">
      <% current_user.orders.each do |order| %>
        <div class="d-flex border-order">
          <div class="order-photo" style="background-image: url(<%= image_path ('article4.jpg') %>);"></div>
          <div class="order-info">

            <h2><%= order.article.name.capitalize %></h2>
            <h3>SIZE: M <%= order.article.size %></h3>
            <h4>$<%= order.article.price_cents%>.00</h4>
            <p>in transit</p>
          </div>
        </div>
        <div class="total-section justify-content-between">
          <div class="subtotal">SUBTOTAL</div>
          <div class="price">$<%= order.article.price_cents%>.00</div>
        </div>
      <% end %>
    </div>
  </div>
</div>


